<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dental.clinic.module.rolepermission.mapper.UserRoleMapper">

    <!-- ResultMap for Role, assuming it's defined in RoleMapper.xml -->
    <!-- <resultMap id="RoleResultMap" type="com.dental.clinic.entity.Role"> ... </resultMap> -->

    <select id="selectRolesByUserId" parameterType="java.lang.Long" resultMap="com.dental.clinic.module.rolepermission.mapper.RoleMapper.RoleResultMap">
        SELECT r.* FROM roles r
        JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId} AND r.deleted = 0 AND r.status = 1
    </select>

    <select id="selectByUserIdAndRoleId" parameterType="java.lang.Long" resultMap="com.dental.clinic.module.rolepermission.mapper.RoleMapper.RoleResultMap">
        SELECT r.* FROM roles r
        JOIN user_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId} AND ur.role_id = #{roleId} AND r.deleted = 0 AND r.status = 1
        LIMIT 1
    </select>

    <insert id="insert" parameterType="map">
        INSERT INTO user_roles (user_id, role_id) VALUES (#{userId}, #{roleId})
    </insert>

    <delete id="deleteByUserIdAndRoleId" parameterType="map">
        DELETE FROM user_roles WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>

    <!-- 检查是否存在该用户的该角色关联 -->
    <select id="isUserRoleExists" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM user_roles
        WHERE user_id = #{userId} AND role_id = #{roleId}
    </select>

    <!-- <delete id="deleteByRoleId" parameterType="java.lang.Long">
        DELETE FROM user_roles WHERE role_id = #{roleId}
    </delete> -->

</mapper>