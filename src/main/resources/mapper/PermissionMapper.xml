<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dental.clinic.module.rolepermission.mapper.PermissionMapper">

    <resultMap id="PermissionResultMap" type="com.dental.clinic.module.rolepermission.entity.Permission">
        <id property="id" column="id"/>
        <result property="permissionName" column="permission_name"/>
        <result property="permissionCode" column="permission_code"/>
        <result property="description" column="description"/>
        <result property="resourceType" column="resource_type"/>
        <result property="action" column="action"/>
        <result property="status" column="status"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <select id="selectById" parameterType="java.lang.Long" resultMap="PermissionResultMap">
        SELECT * FROM permissions WHERE id = #{id}
    </select>

    <!-- AND deleted = 0 查询权限列表-->
    <select id="selectByCode" parameterType="java.lang.String" resultMap="PermissionResultMap">
        SELECT * FROM permissions WHERE permission_code = #{permissionCode}
    </select>

    <select id="selectAllNotDeleted" resultMap="PermissionResultMap">
        SELECT * FROM permissions WHERE deleted = 0
    </select>

    <insert id="insert" parameterType="com.dental.clinic.module.rolepermission.entity.Permission" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO permissions (permission_name, permission_code, description, resource_type, action, status, created_time, updated_time, deleted)
        VALUES (#{permissionName}, #{permissionCode}, #{description}, #{resourceType}, #{action}, #{status}, #{createdTime}, #{updatedTime}, #{deleted})
    </insert>

    <update id="updateById" parameterType="com.dental.clinic.module.rolepermission.entity.Permission">
        UPDATE permissions
        SET permission_name = #{permissionName},
        description = #{description},
        resource_type = #{resourceType},
        action = #{action},
        updated_time = #{updatedTime},
        deleted = #{deleted}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM permissions WHERE id = #{id}
    </delete>

</mapper>